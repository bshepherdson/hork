{
  "name": "Zorkium",
  "description": "A Z-machine interpreter for Chrome",
  "version": "0.0.2",
  "manifest_version": 2,
  "icons": {
    "16": "static/icon/icon16.png",
    "48": "static/icon/icon48.png",
    "128": "static/icon/icon128.png"
  },

  "permissions": [
    "storage",
    "fileSystem",
    "unlimitedStorage"
  ],

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  }
}
